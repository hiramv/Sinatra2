<h1><%= @blog.title %></h1>

<form action="/<%= @blog.id %>" method="get">  
    <p>Edit Title:<input type="text" name="title" value="<%= @blog.title %>"></input></p>
	<p>Edit Body:<br><textarea rows="25" cols="50" name="body"> <%= @blog.body %>
	</textarea></p>
	<%dt = DateTime.now%>
	<input type="hidden" name="submit_time" value="<%=dt.strftime("%H:%M%p on %m/%d/%Y")%>" />
	<br>
    <input type="submit">
</form>

<p>
  <a href="/">Index</a>
</p>


